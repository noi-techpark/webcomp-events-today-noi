    "image": "wcs-logo.png",
    "searchTags": [
        "events"
    ],
    "dist": {
        "basePath": "dist",
        "files": [
            "events-today-noi.min.js"
        ],
        "scripts": []
    },
    "configuration": {
        "tagName": "events-today-noi",
        "options": [
            {
                "key": "event-location",
                "type": "select",
                "label": "Event location: NOI, NOIBRUNECK",
                "required": false,
                "options": {
                    "values": [
                        "NOI",
                        "NOIBRUNECK"
                    ],
                    "default": "NOI"
                }
            },
            {
                "key": "room",
                "type": "text",
                "label": "Room: e.g. Seminar 1, NOISE, Chapel",
                "required": false,
                "options": {
                    "default": ""
                }
            },
            {
                "key": "font-url",
                "type": "text",
                "label": "URL to a valid font css file",
                "required": false,
                "options": {
                    "default": "https://fonts.testingmachine.eu/source-sans-pro/style.css"
                }
            },
            {
                "key": "font-name",
                "type": "text",
                "label": "Name of the font loaded from the font URL",
                "required": false,
                "options": {
                    "default": "Source Sans Pro"
                }
            },
            {
                "key": "language-rotation-interval",
                "type": "number",
                "label": "Language rotation interval in seconds. Supported languages are 'en','de' and 'it'",
                "required": false,
                "options": {
                    "default": 10
                }
            },
            {
                "key": "dev-mode",
                "type": "null",
                "label": "Enables dev mode, to show special edge cases, like long subtitles",
                "required": false,
                "options": {
                    "default": false
                }
            }
        ]
    }
}